

CC = gcc
CCFLAG = -Wall -ansi

AR = ar
ARFLAG = rcs

SERVER = host
CLIENT = client
TESTCLIENT = testclient
TCPIPS = tcp-ip 
HELPER = toolhelps
HELPERBIN = libtoolhelps.a
IPCPACK = sysIPCpack
IPCPACKBIN = libsysIPCpack.a
IPCMGR = sysIPCMGR
IPCSRV = sysIPCSRV
IPCSRVBIN = libsysIPCSRV.a
POWERMGR = sysPowerMGR
POWERSRV = sysPowerSRV
POWERSRVBIN = libsysPowerSRV.a
RINGBUF = spRingBuf
RINGBUFBIN = libspRingBuf.a




all: clean HELPER TCPIPS IPCPACK CLIENT SERVER RINGBUF IPCSRV POWERSRV TESTCLIENT POWERMGR IPCMGR
	@echo ================================================================

POWERMGR:
	@echo === $(POWERMGR) =============================================================
	$(CC) $(CCGLAG) -c ../$(POWERMGR).c
	$(CC) $(CCGLAG) -o $(POWERMGR) $(POWERMGR).o -lpthread -L. -l$(HELPER) -l$(IPCSRV) -l$(POWERSRV)

IPCMGR:
	@echo === $(IPCMGR) =============================================================
	$(CC) $(CCGLAG) -c ../$(IPCMGR).c
	$(CC) $(CCGLAG) -o $(IPCMGR) $(IPCMGR).o -L. -l$(HELPER) -l$(IPCSRV)

TESTCLIENT:
	@echo === $(TESTCILENT) =============================================================
	$(CC) $(CCFLAG) -o $(TESTCLIENT) ../$(TESTCLIENT).c -L. -l$(HELPER) -l$(POWERSRV) -lpthread

POWERSRV:
	@echo === $(POWERSRV) =============================================================
	$(CC) $(CCFLAG) -c ../$(POWERSRV).c
	$(AR) $(ARFLAG) $(POWERSRVBIN) $(RINGBUF).o $(IPCSRV).o $(IPCSRV)tcp.o $(IPCSRV)buffer.o $(POWERSRV).o ipcpacket.o

IPCSRV:
	@echo === $(IPCSRV) =============================================================
	$(CC) $(CCFLAG) -c ../$(IPCSRV).c ../$(IPCSRV)tcp.c ../$(IPCSRV)buffer.c
	$(AR) $(ARFLAG) $(IPCSRVBIN) $(IPCSRV).o $(IPCSRV)tcp.o $(IPCSRV)buffer.o $(RINGBUF).o

RINGBUF:
	@echo === $(RINGBUF) =============================================================
	$(CC) $(CCFLAG) -c ../$(RINGBUF).c
	$(AR) $(ARFLAG) $(RINGBUFBIN) $(RINGBUF).o 

SERVER:
	@echo === $(SERVER) =============================================================
	$(CC) $(CCGLAG) -c ../testrun.c ../main.c
	$(CC) $(CCGLAG) -o $(SERVER) testrun.o tcp-server.o main.o -L. -l$(HELPER)

CLIENT:
	@echo === $(CLIENT) =============================================================
	$(CC) $(CCFLAG) -o $(CLIENT) tcp-client.o -L. -l$(HELPER)

IPCPACK:
	@echo === $(IPCPACK) =============================================================
	$(CC) $(CCFLAG) -c ../ipcpacket.c
	$(AR) $(ARFLAG) $(IPCPACKBIN)

TCPIPS:
	@echo === $(TCPIPS) =============================================================
	$(CC) $(CCFLAG) -c ../tcp-server.c
	$(CC) $(CCFLAG) -c ../tcp-client.c

HELPER:
	@echo === $(HELPER) =============================================================
	$(CC) $(CCFLAG) -c ../$(HELPER).c
	$(AR) $(ARFLAG) $(HELPERBIN) $(HELPER).o

clean:
	@echo === clean =============================================================
	rm -f $(IPCMGR) $(SERVER) $(CLIENT) $(POWERMGR) $(TESTCLIENT) *.o *.a


